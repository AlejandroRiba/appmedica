<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:context=".PerfilActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="32dp">

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/bienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mi_perfil"
                android:textColor="#CAD0D6"
                android:textAlignment="center"
                android:textSize="@dimen/tit"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/desconocido"
                android:contentDescription="@string/foto_de_perfil_de_usuario"
                android:id="@+id/fotodeusuario"
                app:strokeColor="@color/black"
                app:strokeWidth="4dp"
                android:scaleType="centerCrop"
                android:padding="2dp"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/circleImageView"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:textColor="#CAD0D6"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/textViewEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edad"
                android:textColor="#CAD0D6"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/textViewSangre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sangre"
                android:textColor="#CAD0D6"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/textViewContacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacto1"
                android:textColor="#CAD0D6"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <Button
                android:id="@+id/editarDatos"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="@string/editar"
                android:fontFamily="arial"
                android:textAlignment="textEnd"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/edit_icon"
                android:contentDescription="@string/actualizar_ndatos"
                android:layout_margin="20dp"
                tools:ignore="RtlSymmetry"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/editarFoto"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:contentDescription="@string/actualizar_ndatos"
                android:drawableStart="@drawable/edit_photo"
                android:fontFamily=""
                android:paddingEnd="20dp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:text="@string/editar2"
                android:textAlignment="textEnd"
                android:textAllCaps="false"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_regresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regresar"
            android:textColor="#000000"
            android:textSize="26sp"
            tools:ignore="VisualLintButtonSize"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"/>

    </LinearLayout>
</LinearLayout>