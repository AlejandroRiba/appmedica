<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedorConsulta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="14dp"
    android:background="@drawable/card_background">

    <!-- Contenedor para los campos de texto -->
    <GridLayout
        android:id="@+id/consulta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:columnCount="3"
        android:columnOrderPreserved="false">

        <!-- Campos de texto -->
        <TextView
            android:id="@+id/textViewNombre"
            android:layout_columnSpan="3"
            android:fontFamily="@font/alexandria"
            android:paddingBottom="5dp"
            android:text="@string/consultatt"
            android:textColor="@color/textoNegro"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewFecha"
            android:layout_columnSpan="2"
            android:fontFamily="@font/poppins"
            android:text="@string/fecha"
            android:textAlignment="viewEnd"
            android:textColor="@color/textoNegro"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewHora"
            android:layout_gravity="end"
            android:fontFamily="@font/poppins"
            android:text="@string/hora"
            android:textColor="@color/textoNegro"
            android:textSize="11sp"
            android:textStyle="bold" />

    </GridLayout>

    <Space
        android:layout_width="30dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btnOptions"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/caret_right"
        android:tint="@color/textoNegro" />

</LinearLayout>